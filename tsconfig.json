{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // Add bun-types to the types array
    "types": [
      "bun-types"
    ],
    // Standard modern TypeScript settings
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "server.node.mjs"  ]
}